{
  "version": 2,
  "builds": [
    {
      "src": "api/oauth-callback.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.10"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/oauth/callback",
      "dest": "/public/oauth/callback.html"
    },
    {
      "src": "/test-oauth.html",
      "dest": "/public/test-oauth.html"
    },
    {
      "src": "/api/collections",
      "dest": "/api/oauth-callback"
    },
    {
      "src": "/api/health",
      "dest": "/api/oauth-callback"
    }
  ],
  "env": {
    "FAMILYSEARCH_AUTH_BASE_URL": "https://identbeta.familysearch.org/cis-web/oauth2/v3",
    "FAMILYSEARCH_TOKEN_URL": "https://identbeta.familysearch.org/cis-web/oauth2/v3/token"
  }
} 