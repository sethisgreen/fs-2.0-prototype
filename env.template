# FamilySearch API Configuration
# Copy this file to .env and fill in your actual values

# FamilySearch OAuth Credentials (Beta API)
FAMILYSEARCH_CLIENT_ID=your_beta_client_id_here
FAMILYSEARCH_CLIENT_SECRET=your_beta_client_secret_here
FAMILYSEARCH_REDIRECT_URI=http://localhost:8001/oauth/callback

# FamilySearch API Configuration (Beta Environment)
FAMILYSEARCH_API_BASE_URL=https://api.familysearch.org/platform
FAMILYSEARCH_AUTH_BASE_URL=https://identbeta.familysearch.org/cis-web/oauth2/v3
FAMILYSEARCH_TOKEN_URL=https://identbeta.familysearch.org/cis-web/oauth2/v3/token

# Server Configuration
FAMILYSEARCH_MCP_URL=http://localhost:8001/mcp
RECORDS_ROUTER_MCP_URL=http://localhost:8002/mcp

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Cache Configuration
CACHE_TTL=86400  # 24 hours in seconds
MAX_CACHE_SIZE=1000

# Rate Limiting
MAX_REQUESTS_PER_HOUR=5000  # Beta API limit
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# Security
SECRET_KEY=your_secret_key_here  # For session management
TOKEN_ENCRYPTION_KEY=your_encryption_key_here  # For token storage 